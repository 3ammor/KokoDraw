<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mo'men">
    <!-- Title -->
    <title>KokoDraw - Login Page</title>
    <!-- Links to css -->
    <link rel='stylesheet' href='/css/bootstrap.min.css'/>
    <link rel='stylesheet' href='/css/bootstrap-theme.min.css'/>
    <link rel='stylesheet' href='/js/jquery-ui/jquery-ui.min.css'/>
    <link rel='stylesheet' href='/css/font-awesome/css/font-awesome.min.css'/>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery-ui/jquery-ui.min.js"></script>
    <script src="/js/validator.js"></script>
    <link rel='stylesheet' href='/css/join.css'/>
</head>
<body>
<div class="container">
    <div class="row">
        <h1></h1></br>
        <h1 class="home-title">Join a room</h1>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="form-horizontal">
                <label for="room">Room ID </label>
                <div class="form-inline">
                    <form class="form-signin" action='joinroom' method="POST">
                        <input type="text" name="token" value="" class="form-control" placeholder="Enter the room TOKEN"
                               style="width:84%" autofocus required>
                        <button class="btn" type="submit">Join a existing room</button>
                    </form>
                </div>
            </div><!-- form-group -->
            <form class="form-signin" action='create' method="POST">
                <input type="text" name="token2" value="" class="form-control" placeholder="Enter the room TOKEN"
                       style="width:84%" autofocus required>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Create new room</button>
                <span class="error text-danger"> <%= (error5.length > 0) ? error5 : '' %> </span>
            </form>

        </div><!-- col-md-4 -->
        <div class="col-md-3">
            <h1> Your ROOMS </h1>
            <div class="list-group">
                    <form class="form-signin" action='selectroom' method="POST">
                        <% var i=1;%>
                        <% rooms.forEach(function(value){ %>
                            <button value=<%= value %> class="list-group-item list-group-item-action" name="btn" type="submit"> <%= value %> </button>
                        <% i++;}); %>
                    </form>
            </div>
        </div>
        <div class="col-md-1 ">
            <div class="btn-group" role="group">
                <form class="" action='logout' method="POST" role="form">
                    <button class="btn btn-default" type="submit">Log out</button>
                </form>
            </div>
        </div>

    </div><!-- row -->
</div>

<div class="container"></div>
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/jquery-ui/jquery-ui.min.js"></script>
</body>
</html>

