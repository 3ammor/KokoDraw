<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mo'men">
    <!-- Title -->
    <title>KokoDraw - Login Page</title>
    <!-- Links to css -->
    <link rel='stylesheet' href='/css/bootstrap.min.css'/>
    <link rel='stylesheet' href='/css/bootstrap-theme.min.css'/>
    <link rel='stylesheet' href='/js/jquery-ui/jquery-ui.min.css'/>
    <link rel='stylesheet' href='/css/font-awesome/css/font-awesome.min.css'/>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery-ui/jquery-ui.min.js"></script>
    <script src="/js/validator.js"></script>
    <link rel='stylesheet' href='/css/join.css'/>
</head>
<body>
<div class="fluid-container">
    <div class="row">
        <h1></h1></br>
    </div>
    <div class="row">
        <h1></h1>
        <div class="col-md-3">
            <div class="panel panel-default" style="margin-left: 40px">
                <div class="panel-heading"><h4 style="text-align: center"><strong>Joined Rooms</strong></h4></div>
                <div class="panel-body">
                    <div class="list-group">
                        <form class="form-signin" action='selectroom' method="POST">
                            <% rooms.forEach(function(value){ if(value !== ""){%>
                            <button value="<%= value %>" class="list-group-item list-group-item-action" name="btn" type="submit"> <%= value %> </button>
                            <% }}); %>
                        </form>
                        <span class="text"> <%= (error7.length > 0) ? error7 : '' %> </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-3">
            <h2 class="home-title"><strong>Dashboard</strong></h2>
            <div class="form-horizontal">
                <label for="room" style="padding-top: 60px;">Join an existing room</label>
                <div class="form-inline">
                    <form class="form-signin" action='joinroom' method="POST">
                        <input type="text" name="token" value="" class="form-control" placeholder="Existing room name"
                               style="width:100%" autofocus required>
                        <button class="btn btn-primary btn-block" type="submit">Join</button>
                        <span class="error text-danger"> <%= (error6.length > 0) ? error6 : '' %> </span>
                    </form>
                </div>
            </div><!-- form-group -->
            <label for="room" style="padding-top: 80px;">Create a new room</label>
            <form class="form-signin" action='create' method="POST">
                <input type="text" name="token2" value="" class="form-control" placeholder="New room name"
                       style="width:100%" autofocus required>
                <button class="btn  btn-primary btn-block" type="submit">Create</button>
                <span class="error text-danger"> <%= (error5.length > 0) ? error5 : '' %> </span>
            </form>

            <div class="text-center" style="padding-top: 80px;">
                <div class="btn-group" role="group">
                    <form class="" action='logout' method="POST">
                        <button class="btn btn-primary btn-block">Log out</button>
                    </form>
                </div>
            </div>

        </div><!-- col-md-4 -->
    </div><!-- row -->
</div>

<div class="container"></div>
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/jquery-ui/jquery-ui.min.js"></script>
</body>
</html>

